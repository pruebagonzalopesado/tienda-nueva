<style is:global>
    .footer {
        background: linear-gradient(135deg, #5c1a2a 0%, #3d0f1f 100%);
        color: #fff;
        padding: 80px 20px 40px;
        border-top: 3px solid #d4af37;
        margin-top: 100px;
    }

    .footer .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-content {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 60px;
        margin-bottom: 60px;
    }

    .footer-section {
        animation: slideUp 0.6s ease-out;
    }

    .footer-section h4 {
        color: #d4af37;
        margin-bottom: 24px;
        font-size: 1.2rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        text-transform: uppercase;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section li {
        margin-bottom: 12px;
    }

    .footer-section a {
        color: rgba(255, 255, 255, 0.85);
        text-decoration: none;
        transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
        display: inline-block;
        font-size: 0.95rem;
        position: relative;
    }

    .footer-section a::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: #d4af37;
        transition: width 0.3s ease;
    }

    .footer-section a:hover {
        color: #d4af37;
    }

    .footer-section a:hover::after {
        width: 100%;
    }

    .metodos-pago {
        display: flex;
        gap: 12px;
        margin-top: 16px;
        flex-wrap: wrap;
    }

    .payment-logo {
        width: 65px;
        height: 45px;
        object-fit: contain;
        transition: all 0.3s ease;
        opacity: 0.9;
        border-radius: 4px;
        background: white;
        padding: 6px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .payment-logo:hover {
        opacity: 1;
        transform: translateY(-4px);
        box-shadow: 0 4px 8px rgba(212, 175, 55, 0.3);
    }

    @media (max-width: 768px) {
        .payment-logo {
            width: 45px;
            height: 32px;
        }

        .metodos-pago {
            gap: 8px;
            justify-content: center;
        }
    }

    @media (max-width: 480px) {
        .payment-logo {
            width: 35px;
            height: 25px;
            padding: 4px;
        }

        .metodos-pago {
            gap: 6px;
        }
    }

    .footer-bottom {
        border-top: 1px solid rgba(212, 175, 55, 0.2);
        padding-top: 30px;
        display: grid;
        grid-template-columns: 1fr auto;
        align-items: center;
        gap: 40px;
    }

    .footer-bottom p {
        margin: 0;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
    }

    .footer-links {
        display: flex;
        gap: 30px;
    }

    .footer-links a {
        color: rgba(255, 255, 255, 0.8);
        text-decoration: none;
        font-size: 0.85rem;
        transition: all 0.3s ease;
        position: relative;
    }

    .footer-links a::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: #d4af37;
        transition: width 0.3s ease;
    }

    .footer-links a:hover {
        color: #d4af37;
    }

    .footer-links a:hover::after {
        width: 100%;
    }

    .social-icons {
        display: flex;
        gap: 24px;
        margin-top: 24px;
        margin-left: -40px;
        align-items: center;
        justify-content: flex-start;
    }

    .social-icon {
        width: 52px;
        height: 52px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: transparent;
        transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
        text-decoration: none;
        border: none;
        padding: 0;
        cursor: pointer;
        position: relative;
    }

    .social-icon.larger {
        width: 60px;
        height: 60px;
    }

    .social-icon.larger.instagram {
        width: 65px;
        height: 65px;
    }

    .social-icon img {
        width: 32px;
        height: 32px;
        object-fit: contain;
        transition: all 0.3s ease;
    }

    .social-icon:hover {
    }

    .social-icon:hover img {
    }

    .social-icon.larger img {
        width: 38px;
        height: 38px;
    }

    .social-icon.larger.instagram img {
        width: 42px;
        height: 42px;
    }

    @keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @media (max-width: 1024px) {
        .footer-content {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
        }
    }

    @media (max-width: 768px) {
        .footer {
            padding: 60px 20px 30px;
            margin-top: 60px;
        }

        .footer-content {
            grid-template-columns: 1fr 1fr;
            gap: 40px;
        }

        .footer-section h4 {
            font-size: 1rem;
        }

        .footer-section a {
            font-size: 0.9rem;
        }

        .footer-bottom {
            grid-template-columns: 1fr;
            gap: 20px;
            text-align: center;
        }

        .footer-links {
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
        }

        .metodos-pago {
            justify-content: center;
        }
    }
</style>

