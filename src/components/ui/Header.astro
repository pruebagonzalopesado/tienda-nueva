<script>
	// Manejar click en el botón de auth
	document.addEventListener('DOMContentLoaded', function() {
		const authLink = document.getElementById('auth-link');
		
		if (authLink) {
			authLink.addEventListener('click', function(e) {
				e.preventDefault();
				
				// Verificar en el momento del click si hay sesión
				const currentUser = localStorage.getItem('currentUser');
				let isAdmin = false;
				
				if (currentUser) {
					try {
						const userData = JSON.parse(currentUser);
						isAdmin = userData.rol === 'admin';
					} catch(err) {}
				}
				
				// También verificar si window.currentUserData está disponible (auth-new.js)
				if (!isAdmin && window.currentUserData) {
					isAdmin = window.currentUserData.rol === 'admin';
				}
				
				console.log('Auth click - isAdmin:', isAdmin, 'currentUser:', currentUser);
				
				if (isAdmin) {
					window.location.href = '/admin-panel.html';
				} else {
					window.location.href = '/admin-login.html';
				}
			});
		}
	});
</script>
