---
import PublicLayout from "../layouts/PublicLayout.astro";
---

<PublicLayout title="Resetear Contraseña">
  <div class="resetear-container">
    <div class="resetear-card">
      <h1>Nueva Contraseña</h1>
      <p class="descripcion">Ingresa tu nueva contraseña</p>

      <form id="resetearForm" class="resetear-form">
        <div class="form-group">
          <label for="password">Nueva Contraseña</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Mínimo 8 caracteres"
            required
            minlength="8"
          />
          <small>Debe tener al menos 8 caracteres</small>
        </div>

        <div class="form-group">
          <label for="passwordConfirm">Confirmar Contraseña</label>
          <input
            type="password"
            id="passwordConfirm"
            name="passwordConfirm"
            placeholder="Repite tu contraseña"
            required
            minlength="8"
          />
        </div>

        <button type="submit" class="btn-resetear">Cambiar Contraseña</button>
      </form>

      <div id="mensajeExito" class="mensaje-exito" style="display: none;">
        <h3>Contraseña Actualizada</h3>
        <p>Tu contraseña ha sido cambiada exitosamente.</p>
        <a href="#" id="btnIrAlLogin" class="btn-ir-login">Ir al login</a>
      </div>

      <div id="mensajeError" class="mensaje-error" style="display: none;">
        <p id="textoError"></p>
      </div>
    </div>
  </div>
</PublicLayout>

<style>
  .resetear-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: white;
    padding: 20px;
  }

  .resetear-card {
    background: white;
    border-radius: 10px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    padding: 40px;
    max-width: 400px;
    width: 100%;
  }

  h1 {
    text-align: center;
    color: #333;
    margin-bottom: 10px;
    font-size: 24px;
  }

  .descripcion {
    text-align: center;
    color: #666;
    margin-bottom: 30px;
    font-size: 14px;
  }

  .resetear-form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  label {
    font-weight: 600;
    color: #333;
    font-size: 14px;
  }

  input {
    padding: 12px 15px;
    border: 2px solid #e0e0e0;
    border-radius: 5px;
    font-size: 14px;
    transition: border-color 0.3s;
  }

  input:focus {
    outline: none;
    border-color: #667eea;
  }

  small {
    color: #999;
    font-size: 12px;
  }

  .btn-resetear {
    padding: 12px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .btn-resetear:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
  }

  .btn-resetear:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .mensaje-exito {
    background: #d4edda;
    border: 1px solid #c3e6cb;
    border-radius: 5px;
    padding: 20px;
    color: #155724;
    text-align: center;
  }

  .mensaje-exito h3 {
    margin: 0 0 10px 0;
    color: #155724;
  }

  .mensaje-exito p {
    margin: 0 0 15px 0;
    font-size: 14px;
  }

  .mensaje-exito a {
    color: #155724;
    text-decoration: none;
    font-weight: 600;
  }

  .mensaje-error {
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 5px;
    padding: 15px;
    color: #721c24;
    font-size: 14px;
  }
</style>

<script>
  // Script inline para resetear contraseña - sin usar imports
  const form = document.getElementById('resetearForm');
  const mensajeExito = document.getElementById('mensajeExito');
  const mensajeError = document.getElementById('mensajeError');
  const textoError = document.getElementById('textoError');

  function mostrarError(mensaje) {
    textoError.textContent = mensaje;
    mensajeError.style.display = 'block';
    if (form) form.style.display = 'none';
  }

  // Esperar a que Supabase se inicialice (se carga en el layout)
  async function inicializar() {
    for (let i = 0; i < 50; i++) {
      if (typeof window !== 'undefined' && window.supabaseClient) {
        console.log('[resetear-contraseña] Supabase disponible');
        setupResetForm(window.supabaseClient);
        return;
      }
      await new Promise(resolve => setTimeout(resolve, 100));
    }
    console.error('[resetear-contraseña] Supabase no se inicializó');
    mostrarError('❌ Error al cargar el servicio. Intenta nuevamente.');
  }

  function setupResetForm(supabase) {
    console.log('[resetear-contraseña] Verificando sesión de recuperación...');

    // Supabase automáticamente parsea el token de la URL (#type=recovery&token=...)
    supabase.auth.onAuthStateChange(async (event, session) => {
      console.log('[resetear-contraseña] Auth state:', event, 'session:', session?.user?.email);
      
      if (event === 'PASSWORD_RECOVERY' || (session && session.user)) {
        console.log('✅ Sesión de recuperación detectada para:', session?.user?.email);
      } else if (!session) {
        console.warn('❌ No hay sesión activa de recuperación');
        mostrarError('❌ Enlace inválido o expirado. Solicita uno nuevo.');
      }
    });

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const password = document.getElementById('password').value;
        const passwordConfirm = document.getElementById('passwordConfirm').value;
        const btn = form.querySelector('.btn-resetear');

        // Validar
        if (password.length < 8) {
          mostrarError('❌ La contraseña debe tener al menos 8 caracteres');
          return;
        }

        if (password !== passwordConfirm) {
          mostrarError('❌ Las contraseñas no coinciden');
          return;
        }

        btn.disabled = true;
        btn.textContent = 'Actualizando...';
        mensajeError.style.display = 'none';

        try {
          // Actualizar directamente con Supabase (ya tiene la sesión de recuperación)
          const { error } = await supabase.auth.updateUser({
            password: password
          });

          if (error) {
            throw new Error(error.message);
          }

          // Éxito - mostrar mensaje
          form.style.display = 'none';
          mensajeExito.style.display = 'block';
          console.log('✅ Contraseña actualizada');
          
          // Cerrar sesión automáticamente
          await supabase.auth.signOut();

        } catch (error) {
          mostrarError(`❌ ${error.message || 'Error al actualizar contraseña'}`);
          console.error('Error:', error);
        } finally {
          btn.disabled = false;
          btn.textContent = 'Cambiar Contraseña';
        }
      });

      // Configurar botón para ir al login
      const btnIrAlLogin = document.getElementById('btnIrAlLogin');
      if (btnIrAlLogin) {
        btnIrAlLogin.addEventListener('click', (e) => {
          e.preventDefault();
          // Detectar si vino desde admin o desde público
          const referrer = document.referrer;
          if (referrer && (referrer.includes('/admin') || referrer.includes('admin-login'))) {
            window.location.href = '/admin-login.html';
          } else {
            // Volver a página de inicio o donde estaba
            window.location.href = '/';
          }
        });
      }
    }
  }

  // Iniciar cuando el DOM esté listo
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', inicializar);
  } else {
    inicializar();
  }
</script>
